{% extends "../base.njk" %}

{% block titol %}Projecte Movies MVC{% endblock %}

{% block contingut %}

<div class="container d-flex align-items-center justify-content-center">
    <div class="col-md-4">
        <h2 class="text-center">Iniciar Sessió</h2>
        <form action="/users/login" method="post">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Usuari</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Introdueix el teu usuari" required>
            </div>
            <div class="form-group mb-3">
                <label for="password" class="form-label">Contrasenya</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Introdueix la teua contrasenya" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Iniciar Sessió</button>
        </form>
        <p><em>{{error}}</em></p>
    </div>
</div>
{% endblock %}
